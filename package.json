{
	"name": "@vyke/results",
	"type": "module",
	"version": "0.3.0",
	"description": "Functional and small implementation of Rust _*Result*_ type with some goodies to work with TypeScript inspired by ts-results with its own take.",
	"author": "Jose Albizures <jose@albizures.com> (https://albizures.com/)",
	"license": "MIT",
	"keywords": [
		"helpers",
		"typescript",
		"results",
		"error-handling"
	],
	"exports": {
		".": {
			"import": "./dist/index.mjs",
			"require": "./dist/index.cjs"
		},
		"./r": {
			"import": "./dist/r.mjs",
			"require": "./dist/r.cjs"
		}
	},
	"main": "./dist/index.cjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "run-s build:*",
		"build:dist": "unbuild",
		"build:docs": "tsdocs",
		"test": "run-s test:unit test:types test:lint",
		"test:use": "knip",
		"test:lint": "eslint .",
		"test:unit": "vitest run",
		"test:unit:dev": "vitest",
		"test:types": "tsc --noEmit",
		"release:bump": "standard-version -t v",
		"release:publish": "pnpm publish --access public",
		"release:push-tags": "git push --follow-tags origin main",
		"release": "run-s test build release:bump release:publish release:push-tags"
	},
	"devDependencies": {
		"@antfu/eslint-config": "^2.18.1",
		"@vyke/tsdocs": "^0.0.8",
		"eslint": "^9.3.0",
		"knip": "^5.16.0",
		"npm-run-all": "^4.1.5",
		"standard-version": "^9.5.0",
		"typescript": "^5.4.5",
		"unbuild": "^2.0.0",
		"vitest": "^1.6.0"
	},
	"standard-version": {
		"skip": {
			"changelog": true
		}
	}
}
